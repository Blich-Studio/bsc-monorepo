{
  "name": "blich-studio-monorepo",
  "private": true,
  "packageManager": "npm@10.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "cms:dev": "npm run dev --workspace=apps/cms-api",
    "api:dev": "npm run start:dev --workspace=apps/blich-api-gateway",
    "web:dev": "npm run dev --workspace=apps/web",
    "admin:dev": "npm run dev --workspace=apps/admin",
    "dev:all": "concurrently \"npm:cms:dev\" \"npm:api:dev\" \"npm:web:dev\" \"npm:admin:dev\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "turbo": "^2.6.0"
  },
  "dependencies": {
    "vue-router": "^4.6.3"
  }
}
